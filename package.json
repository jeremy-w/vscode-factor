{
  "name": "factor",
  "displayName": "Factor",
  "description": "Factor programming language",
  "version": "0.3.0",
  "publisher": "tk",
  "icon": "factor_256x256.png",
  "homepage": "https://github.com/DexterHaslem/vscode-factor",
  "repository": {
    "type": "git",
    "url": "https://github.com/DexterHaslem/vscode-factor.git"
  },
  "bugs": {
    "url": "https://github.com/DexterHaslem/vscode-factor/issues"
  },
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:factor.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "factor.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "factor",
        "aliases": [
          "Factor",
          "factor"
        ],
        "extensions": [
          ".factor",
          ".facts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "factor",
        "scopeName": "source.factor",
        "path": "./syntaxes/factor.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "factor",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "mocha": "^8.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
